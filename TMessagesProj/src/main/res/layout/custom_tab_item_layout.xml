<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="4dp">

    <ImageView
        android:background="@drawable/rectangle_corner_default"
        android:contentDescription="@null"
        android:padding="4dp"
        android:id="@+id/iv_ai_feature"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/msg_translate"
        app:layout_constraintEnd_toEndOf="@id/tv_ai_feature"
        app:layout_constraintStart_toStartOf="@id/tv_ai_feature"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/tv_ai_feature"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_ai_feature"
        tools:text="Translation" />
</androidx.constraintlayout.widget.ConstraintLayout>